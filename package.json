{
    "name": "node-events-system",
    "version": "1.0.2",
    "description": "An easy events system for Node.js.",
    "main": "min/index.js",
    "repository": "https://git.nosadnile.net/opendocs/node-events-system",
    "author": "Jacob Sapoznikow <jacob1coder@gmail.com>",
    "license": "MIT",
    "private": false,
    "dependencies": {
        "adm-zip": "^0.5.9",
        "fs": "^0.0.1-security",
        "path": "^0.12.7",
        "tar": "^6.1.11"
    },
    "devDependencies": {
        "@node-minify/core": "^6.2.0",
        "@node-minify/google-closure-compiler": "^6.2.0",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.7.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "start": "ts-node index.ts",
        "build": "yarn format && yarn fix && yarn clean && tsc -p . && node scripts/minify.js",
        "dev": "nodemon index.ts",
        "format": "prettier --write .",
        "fcheck": "prettier --check .",
        "clean": "rimraf dist min",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "start:prod": "yarn build && node dist/index.js",
        "test": "yarn build && ts-node test/index.ts",
        "prepublish": "yarn format && yarn fix && yarn clean && tsc -p . && node scripts/minify-prepublish.js",
        "postpublish": "node scripts/minify.js"
    },
    "publishConfig": {
        "registry": "https://npm.nosadnile.net/"
    },
    "files": [
        "dist/**/*.*",
        "min/**/*.*",
        "**/*.*"
    ]
}
